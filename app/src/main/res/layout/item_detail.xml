<?xml version="1.0" encoding="utf-8"?>
<layout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    >
<androidx.constraintlayout.widget.ConstraintLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:id="@+id/review_const"
    android:paddingLeft="10dp"
    android:paddingTop="30dp">


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:text="상세정보"
        android:textSize="20dp"
        android:textColor="#000000"
        android:background="@drawable/text_bottom_color"
        android:id="@+id/txt_item_info"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="상품번호 : 1000020816172"
        app:layout_constraintTop_toBottomOf="@id/txt_item_info"
        android:layout_marginTop="20dp"
        android:id="@+id/item_number_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10dp"
        android:text="모델 : 잔느50"
        app:layout_constraintTop_toBottomOf="@+id/item_number_txt"
        app:layout_constraintLeft_toLeftOf="parent"
        android:id="@+id/model_name"
        />
    
    <WebView
        android:layout_width="0dp"
        android:layout_height="550dp"
        app:layout_constraintTop_toBottomOf="@+id/model_name"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginRight="10dp"
        android:layout_marginTop="20dp"
        android:layout_marginBottom="40dp"
        android:id="@+id/item_info_web"

        />



</androidx.constraintlayout.widget.ConstraintLayout>
</layout>